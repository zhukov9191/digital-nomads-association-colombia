<style>
  @import url("https://fonts.googleapis.com/css2?family=League+Spartan:wght@100..900&display=swap");

  @import url("https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap");

  :root {
    --size-h1: 4rem;
    --size-h2: 3rem;
    --letter-space: 1.5px;
    --first-color: #0d4224;
    --second-color: #006838;
    --third-color: #f1efea;
    --first-font: "League Spartan", sans-serif;
    --second-font: "Open Sans", sans-serif;
    --font-size-p: 1.5rem;
    --font-size-h-card: 25px;
    --font-color-global: rgba(67, 68, 68, 1);
  }
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    color: var(--font-color-global);
  }
  .blog{
    box-sizing: border-box;
    overflow: hidden;
    width: 100%;
  }
  
  .header {
    padding: 2rem 10rem;
    font-family: var(--first-font);
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: var(--third-color);
    box-shadow: 0 0 20px var(--second-color);
    border-radius: 0 0 1rem 1rem;
    /* width: 100%; */
    
  }
  .header a {
    background: var(--first-color);
    padding: 1rem;
    color: white;
    border-radius: 1rem;
    text-decoration: none;
    cursor: pointer;
  }
  .grid-container {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.6em;
    max-width: 1000px;
    width: 90%;
    margin: 7em auto;
    font-family: var(--second-font);
    /* margin-bottom: 7rem; */
  }

  main {
    grid-column: 1/4;
    background: var(--third-color);
    padding: 20px;
    border-radius: 1rem;
  }
  main article:not(:first-child) {
    margin-top: 3rem;
  }
  main article a {
    text-decoration: none;
  }
  main article a h2:hover {
    color: var(--second-color);
  }
  main article h2 {
    font-size: 40px;
    line-height: 3rem;
  }
  main article p {
    margin-top: 2rem;
  }
  main article p a small {
    color: var(--first-color);
  }
  main article i {
    color: var(--first-color);
    font-weight: 700;
  }
  main article i small {
    color: var(--first-color);
    font-weight: 700;
  }
  main article img {
    width: 100%;
    object-fit: cover;
    padding: 0.5rem;
    border-radius: 1.5rem;
  }
  main article p aside {
    grid-column: span 1;
  }
  aside {
    margin-left: 1rem;
  }
  aside details summary{
    font-size: 1.2rem;
    color: var(--first-color);
    font-weight: 500;
  }
  aside details{
    margin-bottom: 2rem;
  }
 
  
  .post a {
    text-decoration: none;
  }
  .post img {
    width: 100%;
    border-radius: 0.5rem;
  }
  .post a i {
    font-size: 0.8rem;
    color: var(--first-color);
    font-weight: 700;
  }
  .post a i small {
    font-weight: 700;
    color: var(--first-color);
  }
  footer {
    grid-column: 1/5;
  }

  @media(width<1100px){
    .header .title{
      display: none;
    }
    
    .grid-container{
      box-sizing: border-box;
    }
  }
  
  @media(width<600px){
    .header a{
      display: none;
    }
    .header {
      display: flex;
      justify-content: center;
      align-items: center;
    }
    
  }
</style>
