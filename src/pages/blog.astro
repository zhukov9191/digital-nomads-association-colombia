<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    color: var(--font-color-global);
    font-family: var(--first-font);
  }
  .grid-container {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.6em;
    max-width: 1000px;
    width: 90%;
    margin: 3em auto;
    font-family: var(--second-font);
    
  }
  .title {
    text-align: center;
    margin-top: 4rem;
    color: var(--first-color);
  }
  main {
    grid-column: 1/4;
    background: var(--third-color);
    padding: 20px;
    border-radius: 1rem;
  }
  main article:not(:first-child) {
    margin-top: 3rem;
  }
  main article a {
    text-decoration: none;
  }
  main article a h2:hover {
    color: var(--second-color);
  }
  main article h2 {
    font-size: 40px;
    line-height: 3rem;
  }
  main article p {
    margin-top: 2rem;
    font-size: 1.3rem;
  }
  main article p a small {
    color: var(--first-color);
  }
  main article i {
    color: var(--first-color);
    font-weight: 700;
  }
  main article i small {
    color: var(--first-color);
    font-weight: 700;
  }
  main article img {
    width: 100%;
    object-fit: cover;
    padding: 0.5rem;
    border-radius: 1.5rem;
  }
  main article p aside {
    grid-column: span 1;
  }
  aside {
    margin-left: 1rem;
  }
  aside details summary {
    font-size: 1.2rem;
    color: var(--first-color);
    font-weight: 500;
  }
  aside details {
    margin-bottom: 2rem;
  }

  .title-post {
    grid-column: 1/-1;
    color: var(--first-color);
  }
  .post a {
    text-decoration: none;
  }
  .post h4 {
    font-size: 1.3rem;
  }
  .post a h4:hover {
    color: var(--second-color);
  }
  .post img {
    width: 100%;
    border-radius: 0.5rem;
    margin-bottom: 0.5rem;
  }
  .post a i {
    font-size: 0.8rem;
    color: var(--first-color);
    font-weight: 700;
  }
  .post a i small {
    font-weight: 700;
    color: var(--first-color);
  }
  footer {
    grid-column: 1/5;
  }

  @media (width<1100px) {
    .header .title {
      display: none;
    }

    .grid-container {
      box-sizing: border-box;
    }
  }
  @media (max-width: 768px) {
    main {
      grid-column: 1/-1;
    }
    aside {
      grid-column: 1/-1;
    }
    .post {
      grid-column: 1/-1;
    }
    .grid-container {
      padding: 0 4rem;
    }
    main article h2 {
      font-size: 2rem;
      line-height: 30px;
      margin-top: 10px;
    }
  }
  @media (width<600px) {
    .header a {
      display: none;
    }
    .header {
      display: flex;
      justify-content: center;
      align-items: center;
    }
  }
</style>
