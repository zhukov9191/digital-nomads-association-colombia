---
import About from "./about.astro"
---

<header>
  <nav>
    <div class="logo">
      <!-- <img src="" alt=""> -->
      <a href="">LOGO</a>
      <input type="checkbox" id="menu">
      <label for="menu">
        <i class="fa-solid fa-bars"></i>
      </label>
    </div>
    <div class="menu">
      <a href="">Home</a>
      <a href="">About</a>
      <a href="">Parners</a>
      <a href="">Team</a>
      <a href="">Contact us</a>
      <a href="">Nomad Visa</a>
    </div>
  </nav>
</header>


<style>
  header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    background: transparent;
    min-height: 50px;
    display: flex;
    justify-content: space-between;
    transition: 0.6s;
    align-items: center;
    z-index: 1;
    padding: 1rem 0 0 0;
  }
  header .logo {
    position: relative;
    transition: 0.6s;
    font-weight: 800;
    letter-spacing: 1px;
  }
  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100%;
    width: 100%;
    margin: 0 2rem;
    padding: 0 20px;
  }
  nav a {
    text-decoration: none;
    color: #000;
    font-size: 1.3rem;
    font-weight: 600;
  }
  .menu a {
    margin: 0 0.5rem;
  }
  .sticky{
    background: rgba(0, 0, 0, 0.25);
    backdrop-filter: blur(5px);
  }
  .sticky nav a, .logo{
    color: white;
  }
</style>
